@model MVCProject.ViewModels.LeaveViewModel
@using System.Web.Optimization

@{
    ViewBag.Title = "Leave Request";
}

<script>
    $(document).on("submit", ".needs-validation", validate);
    $(".needs-validation input").blur(validate);
    function validate(event) {
        if ($(".needs-validation")[0].checkValidity() == false) {
            event.preventDefault();
        }
        $(".needs-validation")[0].classList.add("was-validated");
    }
</script>
<div class="row">
    <div class="col-sm-12">
        <h1>Leave Request</h1>
        <form novalidate="novalidate" action="/Leave/LeaveRequest" method="post" class="needs-validation">
            @Html.AntiForgeryToken()
            <div class="form-row">
                
                <<div class="col-md-6">
    <label for="startdate">Start Date</label>
    <input type="date" class="form-control" id="txtStartDate" placeholder="dd-mm-yyyy" min="DateTime.today" max="2030-12-31" name="StartDate" required="required" />



        <div class="invalid-feedback">
            Please enter a date
        </div>
    </div>
</div>
            <div class="form-row">
                <div class="form-group col-sm-12">
                    <<div class="col-md-6">
    <label for="enddate">End Date</label>
    <input type="date" class="form-control" id="txtEndDate" placeholder="dd-mm-yyyy" min="DateTime.today" max="2030-12-31" name="EndDate" required="required" />

</div>
                    <div class="invalid-feedback">
                        Please enter a date
                    </div>
                </div>
            </div>

            <div class="form-row">
                <label for="Textarea">Leave Reason</label>
                <textarea class="form-control" id="Textarea" rows="3" required="required" name="LeaveReason"></textarea>
                <div class="invalid-feedback">
                    Please enter a leave reason
                </div>
            </div>


            @Html.ValidationSummary()
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>


