
@model MVCProject.ViewModels.EditEmployeeViewModel
@using System.Web.Optimization

@{
    ViewBag.Title = "Edit Profile";
    @Styles.Render("~/Styles/bootstrap")
    @Styles.Render("~/Styles/site")
    @Scripts.Render("~/Scripts/bootstrap")
}

<div class="row">
    <div class="col-sm-12">
        <h1>Edit Profile</h1>
        <form novalidate="novalidate" action="/Account/Update" method="post" class="needs-validation">
            @Html.AntiForgeryToken()
            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="txtName">First Name</label>
                    <input type="text" class="form-control" id="txtName" placeholder="Enter name" name="FirstName" required="required" pattern="^[a-zA-Z ]*$" autofocus="autofocus" value="@Model.FirstName" />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter name [alphabets only].
                    </div>
                </div>
                <div class="form-group col-sm-6">
                    <label for="txtName">Last Name</label>
                    <input type="text" class="form-control" id="txtName" placeholder="Enter name" name="LastName" required="required" pattern="^[a-zA-Z ]*$" value="@Model.LastName" />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter name [alphabets only].
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="txtEmail">Email:</label>
                    @Html.HiddenFor(temp => temp.Email)
                    <span>@Model.Email</span>
                </div>

                <div class="form-group col-sm-6">
                    <label for="txtMobile">Mobile</label>
                    <input type="text" class="form-control" id="txtMobile" placeholder="Mobile" name="Mobile" required="required" pattern="^[789]\d{9}$" value="@Model.Mobile" />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Invalid mobile Number.
                    </div>
                </div>
            </div>
            
            <input name="EmployeeID" value=@Model.EmployeeID hidden>

            @Html.ValidationSummary()
            <button type="submit" class="btn btn-primary">Update Profile</button>
        </form>
    </div>
</div>

<script>

    $("a[href='/Account/EditProfile']").attr("id", "active");

    $(document).on("submit", ".needs-validation", validate);
    $(".needs-validation input").blur(validate);
    function validate(event) {
        if ($(".needs-validation")[0].checkValidity() == false) {
            event.preventDefault();
        }
        $(".needs-validation")[0].classList.add("was-validated");
    }
</script>
